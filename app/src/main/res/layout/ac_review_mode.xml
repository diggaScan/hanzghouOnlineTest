<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="top"
        android:background="@color/progress_gray" />

    <RelativeLayout
        android:id="@+id/order_container"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/exam_error_shunxu" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/baseline1"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_spinner_arrow" />

        <TextView
            android:id="@+id/review_in_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/baseline1"
            android:layout_toRightOf="@id/icon1"
            android:paddingBottom="10dp"
            android:text="个人错题"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:typeface="serif" />

        <View
            android:id="@+id/baseline1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/baseline1"
            android:layout_toRightOf="@id/icon1"
            android:paddingTop="10dp"
            android:text="按照错题产生的时间依次练习" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="85dp"
        android:background="@color/progress_gray" />

    <RelativeLayout
        android:id="@+id/random_container"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/exam_error_suiji" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/baseline2"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_spinner_arrow" />

        <TextView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/baseline2"
            android:layout_toRightOf="@id/icon2"
            android:paddingBottom="10dp"
            android:text="全员错题"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:typeface="serif" />

        <View
            android:id="@+id/baseline2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/baseline2"
            android:layout_toRightOf="@id/icon2"
            android:paddingTop="10dp"
            android:text="随记从错题库中抽取错题进行练习" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="85dp"
        android:background="@color/progress_gray" />
</LinearLayout>