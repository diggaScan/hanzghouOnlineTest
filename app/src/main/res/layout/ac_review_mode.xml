<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <View
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/progress_gray"/>
    <RelativeLayout
        android:id="@+id/order_container"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white" >
        <ImageView
            android:id="@+id/icon1"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:background="@drawable/exam_error_shunxu"
            android:layout_marginRight="25dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_above="@id/baseline1"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_spinner_arrow"/>
        <TextView
            android:id="@+id/review_in_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="顺序练习"
            android:paddingBottom="10dp"
            android:typeface="serif"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_toRightOf="@id/icon1"
            android:layout_above="@id/baseline1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/baseline1"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按照错题产生的时间依次练习"
            android:layout_toRightOf="@id/icon1"
            android:layout_below="@id/baseline1"
            android:paddingTop="10dp"/>
    </RelativeLayout>
    <View
        android:layout_marginLeft="85dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/progress_gray"/>
    <RelativeLayout
        android:id="@+id/random_container"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white" >
        <ImageView
            android:id="@+id/icon2"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:background="@drawable/exam_error_suiji"
            android:layout_marginRight="25dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_above="@id/baseline2"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_spinner_arrow"/>
        <TextView
            android:paddingBottom="10dp"
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="随机练习"
            android:typeface="serif"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_toRightOf="@id/icon2"
            android:layout_above="@id/baseline2"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/baseline2"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="随记从错题库中抽取错题进行练习"
            android:layout_toRightOf="@id/icon2"
            android:layout_below="@id/baseline2"
            android:paddingTop="10dp"/>
    </RelativeLayout>
    <View
        android:layout_marginLeft="85dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/progress_gray"/>
    <RelativeLayout
        android:id="@+id/sequence_container"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white" >
        <ImageView
            android:id="@+id/icon3"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:background="@drawable/exam_error_gaopin"
            android:layout_marginRight="25dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_above="@id/baseline3"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_spinner_arrow"/>
        <TextView
            android:paddingBottom="10dp"
            android:id="@+id/review_gaoping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高频错题"
            android:typeface="serif"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_toRightOf="@id/icon3"
            android:layout_above="@id/baseline3"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/baseline3"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="从错题库中依次选取错误率最高的题目进行练习"
            android:layout_toRightOf="@id/icon3"
            android:layout_below="@id/baseline3"
            android:paddingTop="10dp"/>
    </RelativeLayout>
    <View
        android:layout_marginLeft="85dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/progress_gray"/>
</LinearLayout>